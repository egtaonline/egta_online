%table{:width => "90%"}
  %tr
    %th Name
  %tr
    -simulator.strategies.each do |strategy|
      %tr{:class => "= cycle('','altrow') "}
        %td= strategy
        %td= link_to 'Remove', url_for(:action => :remove_strategy, :strategy_name => strategy), :method => :post, :remote => true
    =form_tag url_for(:action=>:add_strategy, :id => simulator.id), :method=>:post, :remote => true do
      %tr{:class => "= cycle('','altrow') "}
        %td= text_field_tag :strategy
        %td= submit_tag "Add"