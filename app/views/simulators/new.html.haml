%h3 New simulator
=form_for @simulator, :html => { :multipart => true } do |f|
  = f.error_messages
  %table
    %tr
      %td= f.label :name
      %td= f.text_field :name
    %tr
      %td= f.label :version
      %td= f.text_field :version
    %tr
      %td= f.label :description
      %td= f.text_area :description, :cols=>27, :rows=>10
    %tr
      %td= f.label :simulator, "Zipped simulator"
      %td= f.file_field :simulator
  %p
    = f.submit

