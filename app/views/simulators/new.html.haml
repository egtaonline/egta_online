.breadcrumb
  .bc
    #{ link_to 'Home', root_path } #{ link_to 'Simulators', simulators_path } Create Simulator
%h3 New simulator
=form_for @simulator, :html => { :multipart => true } do |f|
  = f.error_messages
  %table
    %tr
      %td= f.label :name
      %td= f.text_field :name
    %tr
      %td= f.label :version
      %td= f.text_field :version
    %tr
      %td= f.label :description
      %td= f.text_area :description, :cols=>27, :rows=>10
    %tr
      %td= f.label :simulator, "Zipped Simulator"
      %td= f.file_field :simulator
    %tr
      %td= f.label :account_id, "Default Account"
      %td= f.collection_select :account_id, Account.all, :id, :name
  %p
  = f.submit

