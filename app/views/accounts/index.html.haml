%h3 Accounts
%p= link_to 'New account', new_account_path
%table{:width => "90%"}
  %tr
    %th Username
    %th Host
    %th
  -@accounts.each do |account|
    %tr{:class => "= cycle('','altrow')"}
      %td= link_to account.username, account
      %td= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete