%h3 Edit account
=form_for @account do |f|
  = f.error_messages
  %table
    %tr
      %th= f.label :username
      %td= f.text_field :username
    %tr
      %th= f.label :max_concurrent_simulations
      %td= f.text_field :max_concurrent_simulations, :value => 10
    %tr
      %th= f.label :flux
      %td= f.check_box :flux, :checked => true
  %p
    = f.submit