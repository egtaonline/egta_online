.breadcrumb
  .bc
    #{ link_to 'Home', root_path } #{link_to 'Game Schedulers', game_schedulers_path} #{link_to "Game Scheduler", @game_scheduler} Edit Game Scheduler
%h3 Edit game scheduler
-form_for [@game, @game_scheduler] do |f|
  = f.error_messages
  %table
    %tr
      %td= f.label :active
      %td= f.check_box :active, {}, true, false
    %tr
      %td= f.label :max_samples, "Max Samples Per Profile"
      %td= f.text_field :max_samples
    %tr
      %td= f.label :samples_per_simulation, "Samples per scheduled"
      %td= f.text_field :samples_per_simulation
    %tr
      %td= f.label :process_memory, "Required memory (in MB)"
      %td= f.text_field :process_memory
    %tr
      %td= f.label :time_per_sample
      %td= f.text_field :time_per_sample
    %tr
      %td= f.label :jobs_per_request, "Concurrent Jobs per Request"
      %td= f.text_field :jobs_per_request
  %p
    = f.submit 'Update'


