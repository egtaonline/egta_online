=show_for scheduler do |u|
  %h3 Scheduler Configuration
  = u.attribute :name
  = u.attribute :simulator_fullname, :label => "Simulator"
  = u.attribute :samples_per_simulation
  = u.attribute :process_memory, :label => "Process memory (in MB)"
  = u.attribute :time_per_sample, :label => "Time per sample (in seconds)"
  = u.attribute :nodes, :label => "Nodes required"
  = u.attribute :active
  %h3 Simulator Configuration
  = render :partial => "parameter", :collection => scheduler.parameter_hash.to_a
= link_to "Edit Scheduler", edit_generic_scheduler_path(scheduler), :class => 'btn btn-primary'
= link_to "Create Game to Match", url_for(controller: "games", action: "from_scheduler", scheduler_id: scheduler.id), :class => 'btn btn-primary'