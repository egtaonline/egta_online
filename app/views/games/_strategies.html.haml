%table{:width => "90%"}
  %tr
    %th Name
  %tr
    -game.strategies.each do |strategy|
      %tr{:class => "= cycle('','altrow') "}
        %td= strategy.name
        %td= link_to 'Remove', url_for(:action => :remove_strategy, :strategy_id => strategy.id, :simulator_id => game.simulator.id), :method => :post, :remote => true
    =form_tag url_for(:action=>:add_strategy, :simulator_id => game.simulator.id, :id=>game.id), :method=>:post, :remote => true do
      %tr{:class => "= cycle('','altrow') "}
        %td= text_field_tag :strategy
        %td= submit_tag "Add"