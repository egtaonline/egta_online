.breadcrumb
  .bc
    #{ link_to 'Home', root_path } #{link_to 'Games', games_path} #{link_to @game.name, @game} Edit Game
%h3 Edit Game
-form_for @game do |f|
  = f.error_messages
  %table
    %tr
      %td= f.label :name
      %td= f.text_field :name
    %tr
      %td= f.label :description
      %td= f.text_area :description, :cols=>27, :rows=>10
  %p
    = f.submit 'Update'