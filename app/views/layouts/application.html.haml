!!! 5
%html
  %head
    %meta(charset="utf-8")
    %title Home - EGTAOnline
    /[if lt IE 9]
      %script(src="http://html5shiv.googlecode.com/svn/trunk/html5.js")
    =javascript_include_tag 'application'
    = stylesheet_link_tag 'application'
    =csrf_meta_tags
    %meta{"name"=>"viewport","content"=>"width=device-width, initial-scale=1.0"}
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-toggle"=>"collapse", "data-target"=>".nav-collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{"href"=>"/"}
            EGTAOnline
          .nav-collapse
            %ul.nav
              %li= link_to "Accounts", "/accounts"
              %li= link_to "Simulators", "/simulators"
              %li.dropdown
                %a.dropdown-toggle{"data-toggle"=>"dropdown"}
                  Schedulers
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Generic Schedulers", "/schedulers"
                  %li= link_to "Game Scheduler", "/game_schedulers"
                  %li= link_to "Hierarchical Schedulers", "/hierarchical_schedulers"
              %li= link_to "Simulations", "/simulations"
              %li= link_to "Games", "/games"
            %p.navbar-text.pull-right
              -if user_signed_in?
                ="Logged in as #{current_user.email} |"
                = link_to "Sign out", destroy_user_session_path
              -else
                =link_to "Sign in", new_user_session_path
    .container
      -flash.each do |name, msg|
        -if name == :notice
          .alert.alert-success
            %a.close{"data-dismiss"=>"alert"}
              x
            =msg
        -else
          .alert.alert-error
            %a.close{"data-dismiss"=>"alert"}
              x
            =msg
      =yield
      %footer
        %p.pull-right &nbsp; &copy;2010 Strategic Reasoning &nbsp; &nbsp;
